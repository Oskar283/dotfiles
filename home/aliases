alias ll="ls -la --color"
alias ls="ls --color"

alias dfind="find . -iname"

alias tmux_reset="clear && tmux clear-history"


# Deletes all git branches except master
alias delete_git_branches="git for-each-ref --format '%(refname:short)' refs/heads | grep -v master | xargs git branch -D"

alias p3="python3"

alias gen_ctags='~/.vim/configs/universal-ctags/ctags -R -f"tags" --languages=-javascript,sql,css --map-TTCN=+.ttcnpp'

alias vi="vi -u NONE"

alias repo="cd /repo/"

alias em="/snap/bin/emacsclient --tty"


alias vpn="vccvpn login && bash ~/update_notif_vccvpn.sh"
alias vpn_logout="vccvpn logout && bash ~/update_notif_vccvpn.sh"
alias docker_login="docker login zocker.cicd.autoheim.net --password-stdin --username \"$ARTIFACTORY_USER\" <<< \"$ARTIFACTORY_API_KEY\""
alias oden_ssh="ssh orodhol1@se01z99login.internal.odencluster.com"
